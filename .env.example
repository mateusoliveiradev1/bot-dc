# Hawk Bot - Configuração Moderna
# Copie este arquivo para .env e preencha com seus valores reais

# ===== CONFIGURAÇÃO DO DISCORD =====
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_COMMAND_PREFIX=!
DISCORD_ENABLE_MESSAGE_CONTENT=true
DISCORD_ENABLE_GUILD_MEMBERS=true
DISCORD_ENABLE_VOICE_STATES=true
DISCORD_CASE_INSENSITIVE=true

# ===== CONFIGURAÇÃO DO BANCO DE DADOS =====
# Opções: postgresql, json, sqlite
DATABASE_STORAGE_TYPE=postgresql

# PostgreSQL (se usando)
DATABASE_POSTGRESQL_HOST=localhost
DATABASE_POSTGRESQL_PORT=5432
DATABASE_POSTGRESQL_DATABASE=hawkbot
DATABASE_POSTGRESQL_USERNAME=hawkbot_user
DATABASE_POSTGRESQL_PASSWORD=your_password_here
DATABASE_POSTGRESQL_SSL_MODE=prefer
DATABASE_POSTGRESQL_POOL_SIZE=10
DATABASE_POSTGRESQL_MAX_OVERFLOW=20

# JSON/SQLite (se usando)
DATABASE_JSON_FILE_PATH=./data/bot_data.json
DATABASE_SQLITE_FILE_PATH=./data/bot_data.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=6
DATABASE_BACKUP_RETENTION_DAYS=30

# ===== CONFIGURAÇÃO DO CACHE =====
# Opções: redis, memory
CACHE_BACKEND=memory

# Redis (se usando)
CACHE_REDIS_HOST=localhost
CACHE_REDIS_PORT=6379
CACHE_REDIS_PASSWORD=
CACHE_REDIS_DATABASE=0
CACHE_REDIS_SSL=false
CACHE_REDIS_POOL_SIZE=10

# Cache em Memória
CACHE_MEMORY_MAX_SIZE_MB=256
CACHE_MEMORY_DEFAULT_TTL_SECONDS=3600
CACHE_MEMORY_CLEANUP_INTERVAL_SECONDS=300
CACHE_MEMORY_STRATEGY=adaptive

# ===== APIS EXTERNAS =====
# PUBG API
API_PUBG_API_KEY=your_pubg_api_key_here
API_PUBG_PLATFORM=steam
API_PUBG_RATE_LIMIT_PER_MINUTE=10
API_PUBG_TIMEOUT_SECONDS=30

# Medal.tv API
API_MEDAL_API_KEY=your_medal_api_key_here
API_MEDAL_RATE_LIMIT_PER_MINUTE=60
API_MEDAL_TIMEOUT_SECONDS=15

# ===== CONFIGURAÇÃO DE LOGGING =====
LOGGING_LEVEL=INFO
LOGGING_LOG_FILE=./logs/hawkbot.log
LOGGING_ERROR_FILE=./logs/hawkbot_errors.log
LOGGING_MAX_FILE_SIZE_MB=10
LOGGING_BACKUP_COUNT=5
LOGGING_ENABLE_CONSOLE=true
LOGGING_ENABLE_FILE=true
LOGGING_ENABLE_STRUCTURED=true
LOGGING_SANITIZE_SENSITIVE_DATA=true
LOGGING_INCLUDE_STACK_TRACE=true

# ===== CONFIGURAÇÃO DE PERFORMANCE =====
PERFORMANCE_MAX_MEMORY_MB=512
PERFORMANCE_MAX_CPU_PERCENT=80
PERFORMANCE_ENABLE_METRICS=true
PERFORMANCE_METRICS_INTERVAL_SECONDS=60
PERFORMANCE_ENABLE_PROFILING=false
PERFORMANCE_AUTO_RESTART_ON_HIGH_MEMORY=true
PERFORMANCE_ENABLE_GARBAGE_COLLECTION_OPTIMIZATION=true

# ===== FEATURE FLAGS =====
FEATURE_RANKING_SYSTEM=true
FEATURE_SEASONS=true
FEATURE_MUSIC_SYSTEM=true
FEATURE_ACHIEVEMENTS=true
FEATURE_PUBG_INTEGRATION=true
FEATURE_WEB_DASHBOARD=true
FEATURE_NOTIFICATIONS=true
FEATURE_MINIGAMES=true
FEATURE_AUTO_MODERATION=false
FEATURE_ANALYTICS=true

# ===== CONFIGURAÇÕES GERAIS =====
BOT_NAME="Hawk Bot"
BOT_VERSION="2.0.0"
BOT_DESCRIPTION="Bot Discord moderno com sistema de ranking PUBG"
BOT_AUTHOR="Hawk Team"
BOT_SUPPORT_SERVER_ID=your_support_server_id
BOT_OWNER_IDS=your_user_id_here,another_owner_id

# ===== DIRETÓRIOS =====
DIRECTORIES_DATA=./data
DIRECTORIES_LOGS=./logs
DIRECTORIES_CACHE=./cache
DIRECTORIES_BACKUPS=./backups
DIRECTORIES_TEMP=./temp

# ===== CONFIGURAÇÕES AVANÇADAS =====
# Timeouts
TIMEOUTS_COMMAND_TIMEOUT_SECONDS=30
TIMEOUTS_DATABASE_TIMEOUT_SECONDS=10
TIMEOUTS_API_TIMEOUT_SECONDS=15
TIMEOUTS_CACHE_TIMEOUT_SECONDS=5

# Rate Limiting
RATE_LIMIT_COMMANDS_PER_MINUTE=30
RATE_LIMIT_API_CALLS_PER_MINUTE=100
RATE_LIMIT_CACHE_OPERATIONS_PER_SECOND=1000

# Segurança
SECURITY_ENABLE_COMMAND_COOLDOWNS=true
SECURITY_MAX_MESSAGE_LENGTH=2000
SECURITY_ENABLE_SPAM_PROTECTION=true
SECURITY_BLACKLISTED_WORDS=spam,hack,cheat

# Debug (apenas para desenvolvimento)
DEBUG_ENABLE_DEBUG_MODE=false
DEBUG_LOG_SQL_QUERIES=false
DEBUG_LOG_CACHE_OPERATIONS=false
DEBUG_ENABLE_PERFORMANCE_MONITORING=false